//Load our modified RCSwitch Library
RCSwitch mySwitch = RCSwitch();

void setup() {
  // Transmitter is connected to Arduino Pin #11
  mySwitch.enableTransmit(11);

  // Need to set pulse width to 300
  mySwitch.setRepeatTransmit(5);
  mySwitch.setProtocol(8);
  mySwitch.setPulseLength(300);
}

// Example turning on and off the light
void loop() {
  //Check to see if the library is correctly modified
  mySwitch.amIModified();
  
  //Send B command first
  mySwitch.send(&bLghtOn[0] , 40);

  //Delay 33 milliseconds
  delay(33);

  //Send a sync bit
  mySwitch.sendOff();

  //Send C command
  mySwitch.send(&cLghtOn[0] , 40);

  //DONE
  delay(5000);
}
